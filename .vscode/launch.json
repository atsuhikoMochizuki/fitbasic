    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome without starting angular",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "starting angular and launch Chrome",
            "url": "http://localhost:4200",
            "preLaunchTask": "npmStart",
            "webRoot": "${workspaceFolder}",
            "timeout": 300000 // 30 seconds
        },
        // {
        //     "type": "chrome",
        //     "request": "launch",
        //     "name": "Launch Chrome with starting angular before",
        //     "url": "http://localhost:4200",
        //     "webRoot": "${workspaceFolder}"
        // },
        {
            "name": "Launch Brave",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npmStart",
            "url": "http://localhost:4200/",
            "runtimeExecutable": "/usr/bin/brave-browser",
                      
          },
        
    ]
}